{
    "manifest_version": 3,
    "version": "1.0",
    "name": "AutoLoop",
    "description": "activate on any tab to start a autoloop on any video",
    "permissions": [
      "tabs"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
        "default_popup": "popup.html"
    }
    
}